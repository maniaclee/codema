<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvbby.garfield.dao.ArticleMapper">
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="object" >
        INSERT INTO article
        (
            article_id,
         	user_id,
         	title,
         	body,
         	type,
         	add_time,
         	update_time
        )
        values(
            #{articleId},
            #{userId},
            #{title},
            #{body},
            #{type},
            now(),
            now()
        )
    </insert>
    <select id="queryByIds" resultType="com.lvbby.garfield.entity.ArticleEntity" >
        select * from article
        where id in
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="queryByUser" resultType="com.lvbby.garfield.entity.ArticleEntity">
        select * from article
        where user_id = #{userId}
        order by  update_time desc
    </select>
</mapper>