<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${mapper}">
    <resultMap id="resultMap" type="${resultClass}" >
    </resultMap>
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="object" >
    </insert>
    <select id="queryByIds"  resultType="long" parameterType="list" return="List(Long)" args="List(Long) ids">
        select id from article
        where  id in
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="queryByUser" resultType="${resultClass}" return="List(${resultClass})">
        select * from article
        where user_id = #{userId}
        order by  update_time desc
    </select>
    <select id="queryMap"   resultMap="resultMap">
        select * from article
        where user_id = #{userId}
        <if test="title">
            and title = #{title}
        </if>
        order by  update_time desc
    </select>
    <update id="update">
    </update>
    <select id="selectById">
    </select>
</mapper>